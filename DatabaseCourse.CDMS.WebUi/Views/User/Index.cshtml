@using DatabaseCourse.CDMS.Business.BusinessLogic
@using DatabaseCourse.CDMS.Business.BusinessModel
@using DatabaseCourse.CDMS.WebUi.Classes
@using DatabaseCourse.Common.Enums
@using DatabaseCourse.Common.Utility.EnumUtility

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var userBll = new UserBLL(ThisApp.CurrentUser);
    var userData = new List<UserInfo>();
}


@{
    if (ThisApp.AccessDenied == null && ThisApp.InnerAccessDenied == null)
    {
        userData = userBll.GetAllUserInfos();
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        کاربران سامانه
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ردیف</th>
                                        <th>نام</th>
                                        <th>نام خانوادگی</th>
                                        <th>نام کاربری</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملگر</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var counter = 1;
                                        if (userData.Count > 0)
                                        {
                                            foreach (var user in userData)
                                            {

                                                <tr class="@Html.Raw(counter % 2 == 0 ? "odd" : "even")">
                                                    <td>@counter</td>
                                                    <td>نام</td>
                                                    <td>نام خانوادگی</td>
                                                    <td>@user.Username</td>
                                                    <td>@user.CreationDate</td>
                                                    <td>
                                                        <a class="fa fa-pencil"></a>
                                                    </td>
                                                </tr>
                                                counter++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

                                        }
                                        else
                                        {
                                            if (ThisApp.AccessDeniedType == AccessDeniedType.NotLogined)
                                            { Response.Redirect("/Login/Index"); }
                                            <p>@EnumUtility.GetEnumDescription(ThisApp.AccessDeniedType)</p>
                                        }
}